<% layout("layouts/boilerplate")%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Signup On Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div>
        <label for="username" class="form-label mt-3">Username : </label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          placeholder="eg:- nagendra"
          required
        />
        <div class="invalid-feedback">Username should be valid</div>
      </div>
      <div>
        <label for="email" class="form-label mt-3">Email-ID : </label>
        <input
          type="text"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>

      <div>
        <label for="password" class="form-label mt-3">Password : </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Password is Required</div>
      </div>

      <button class="btn btn-success mt-3 mb-3">SignUp</button>
    </form>
  </div>
</div>
