<% layout("layouts/boilerplate") %>

<style>
  /* ===== Category Bar Container ===== */
  .filters-container {
    position: relative;
    display: flex;
    align-items: center;
    margin: 1rem 0;
    overflow: hidden;
  }

  /* ===== Scroll Buttons ===== */
  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: white;
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
    border-radius: 50%;
    width: 35px;
    height: 35px;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 10;
  }

  .scroll-btn.left {
    left: 5px;
  }

  .scroll-btn.right {
    right: 5px;
  }

  .filters-container:hover .scroll-btn {
    opacity: 1;
  }

  .scroll-btn i {
    font-size: 16px;
    color: #333;
  }

  /* ===== Filter Bar ===== */
  #filters {
    display: flex;
    align-items: center;
    overflow-x: auto;
    white-space: nowrap;
    scroll-behavior: smooth;
    gap: 1.5rem;
    padding: 1rem 3rem; /* Add padding for space near arrows */
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    opacity: 0.6;
    transition: opacity 0.2s ease-in-out;
    min-width: 70px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.3rem;
  }

  #filters a {
    text-decoration: none;
    color: black;
  }

  /* ===== Tax Toggle Button ===== */
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem 1.5rem;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
  }

  /* ===== Responsive Design ===== */
  @media (max-width: 600px) {
    #filters {
      gap: 1rem;
      padding: 0.5rem 2rem;
    }
    .filter {
      min-width: 60px;
    }
    .filter p {
      font-size: 0.7rem;
    }
    .tax-toggle {
      height: 3rem;
      padding: 0.6rem 1rem;
      font-size: 0.8rem;
    }
  }
</style>

<body>
  <div class="filters-container">
    <!-- Left Scroll Button -->
    <button class="scroll-btn left" id="scroll-left">
      <i class="fa-solid fa-chevron-left"></i>
    </button>

    <!-- Filter List -->
    <div id="filters">
      <a href="/listings">
        <div class="filter">
          <p>All</p>
        </div>
      </a>
      <a href="/listings?category=trending">
        <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
      </a>
      <a href="/listings?category=rooms">
        <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
      </a>
      <a href="/listings?category=cities">
        <div class="filter">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic cities</p>
        </div>
      </a>
      <a href="/listings?category=mountains">
        <div class="filter">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </div>
      </a>
      <a href="/listings?category=castles">
        <div class="filter">
          <div><i class="fa-solid fa-house"></i></div>
          <p>Castles</p>
        </div>
      </a>
      <a href="/listings?category=pools">
        <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing pools</p>
        </div>
      </a>
      <a href="/listings?category=campings">
        <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>
      </a>
      <a href="/listings?category=farms">
        <div class="filter">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div>
      </a>
      <a href="/listings?category=arctic">
        <div class="filter">
          <div><i class="fa-solid fa-snowman"></i></div>
          <p>Arctic</p>
        </div>
      </a>
      <a href="/listings?category=domes">
        <div class="filter">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Domes</p>
        </div>
      </a>
      <a href="/listings?category=plays">
        <div class="filter">
          <div><i class="fa-solid fa-play"></i></div>
          <p>Plays</p>
        </div>
      </a>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="switchCheckDefault"
          />
          <label class="form-check-label" for="switchCheckDefault"
            >Display total after taxes</label
          >
        </div>
      </div>
    </div>

    <!-- Right Scroll Button -->
    <button class="scroll-btn right" id="scroll-right">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  </div>

  <!-- ===== Listings Section ===== -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListing) { %>
    <a href="/listings/<%= listing._id %>" class="linking-list">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="Listing-image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><b><%= listing.title %></b></h5>
          <p class="card-price" data-base-price="<%= listing.price %>">
            <span class="price-value"
              >&#8377; <%= listing.price.toLocaleString("en-IN") %>/night</span
            >
            <i class="tax-info"> &nbsp; +18% GST</i>
          </p>

          <p class="card-location">
            <%= listing.location %>,<%= listing.country %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <!-- ===== JS for Scroll + Tax Toggle ===== -->
  <script>
    // Tax Toggle
    // Elements
    const taxSwitch = document.getElementById("switchCheckDefault");
    const priceElements = document.querySelectorAll(".card-price");

    // Helper to format INR
    function formatINR(num) {
      return num.toLocaleString("en-IN");
    }

    // Apply current switch state to all prices
    function applyTaxState(isTaxOn) {
      priceElements.forEach((priceEl) => {
        // Read base price from data attribute (string)
        let baseStr = priceEl.getAttribute("data-base-price");

        // If data attribute missing for some reason, try to extract and then set it.
        if (!baseStr) {
          const text = priceEl.textContent || "";
          const m = text.match(/â‚¹\s*([\d,]+)/);
          if (m) {
            baseStr = m[1].replace(/,/g, "");
            priceEl.setAttribute("data-base-price", baseStr);
          } else {
            // nothing to do if no price found
            return;
          }
        }

        const basePrice = parseInt(baseStr, 10);
        const gstAmount = Math.round(basePrice * 0.18);
        const total = basePrice + gstAmount;

        if (isTaxOn) {
          priceEl.innerHTML = `<span class="price-value">&#8377; ${formatINR(
            total
          )}/night</span> <span class="after-tax">(Tax included)</span>`;
        } else {
          priceEl.innerHTML = `<span class="price-value">&#8377; ${formatINR(
            basePrice
          )}/night</span> <i class="tax-info">&nbsp;+18% GST</i>`;
        }
      });
    }

    // Listen for changes on the switch
    taxSwitch.addEventListener("change", (e) => {
      applyTaxState(e.target.checked);
    });

    // Apply initial state on load (in case checkbox is pre-checked)
    document.addEventListener("DOMContentLoaded", () => {
      applyTaxState(taxSwitch.checked);
    });

    // Horizontal Scroll Controls
    const bar = document.getElementById("filters");
    const leftBtn = document.getElementById("scroll-left");
    const rightBtn = document.getElementById("scroll-right");

    leftBtn.addEventListener("click", () => {
      bar.scrollBy({ left: -300, behavior: "smooth" });
    });

    rightBtn.addEventListener("click", () => {
      bar.scrollBy({ left: 300, behavior: "smooth" });
    });
  </script>
</body>
