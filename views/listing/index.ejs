<%layout("layouts/boilerplate")%>

<style>
  /* ===== Base Styles ===== */
  #filters {
    display: flex;
    align-items: center;
    overflow-x: auto; /* Enables horizontal scroll */
    white-space: nowrap; /* Prevents line breaks */
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: #ccc transparent;
    padding: 1rem;
    gap: 1.5rem;
    scroll-behavior: smooth;
  }

  #filters::-webkit-scrollbar {
    height: 6px; /* Horizontal scrollbar size */
  }

  #filters::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 4px;
  }

  #filters::-webkit-scrollbar-thumb:hover {
    background: #999;
  }

  .filter {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    opacity: 0.6;
    transition: opacity 0.2s ease-in-out;
    min-width: 70px; /* Keeps each filter box width consistent */
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.3rem;
  }

  #filters a {
    text-decoration: none;
    color: black;
  }

  /* ===== Tax Toggle Button ===== */
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem 1.5rem;
    margin-left: 1.5rem;
    flex-shrink: 0; /* Prevents it from shrinking in scroll area */
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
  }

  /* ===== Responsive Adjustments ===== */

  /* Mobile (≤600px) */
  @media (max-width: 600px) {
    #filters {
      gap: 1rem;
      padding: 0.5rem 0.8rem;
    }

    .filter {
      min-width: 60px;
    }

    .filter p {
      font-size: 0.7rem;
    }

    .tax-toggle {
      height: 3rem;
      padding: 0.6rem 1rem;
      font-size: 0.8rem;
    }
  }

  /* Tablet (600px–1024px) */
  @media (min-width: 601px) and (max-width: 1024px) {
    #filters {
      gap: 1.2rem;
    }

    .filter {
      min-width: 70px;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .tax-toggle {
      height: 3.2rem;
      padding: 0.8rem 1.2rem;
    }
  }
</style>
<body>
  <div id="filters">
    <a href="/listings">
      <div class="filter">
        <p>All</p>
      </div>
    </a>
    <a href="/listings?category=trending">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    </a>
    <a href="/listings?category=rooms">
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
    </a>
    <a href="/listings?category=cities">
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
    </a>
    <a href="/listings?category=mountains">
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
    </a>
    <a href="/listings?category=castles">
      <div class="filter">
        <div><i class="fa-solid fa-house"></i></div>
        <p>castles</p>
      </div>
    </a>
    <a href="/listings?category=pools">
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
    </a>
    <a href="/listings?category=campings">
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
    </a>
    <a href="/listings?category=farms">
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
    </a>
    <a href="/listings?category=arctic">
      <div class="filter">
        <div><i class="fa-solid fa-snowman"></i></div>
        <p>Arctic</p>
      </div>
    </a>
    <a href="/listings?category=domes">
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
    </a>
    <a href="/listings?category=plays">
      <div class="filter">
        <div><i class="fa-solid fa-play"></i></div>
        <p>plays</p>
      </div>
    </a>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let listing of allListing){ %>
    <a href="/listings/<%=listing._id%>" class="linking-list">
      <div class="card col listing-card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="Listing-image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><b><%=listing.title%></b></h5>
          <p class="card-price">
            &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
            <i class="tax-info"> &nbsp; +18% GST</i>
          </p>

          <p class="card-location">
            <%=listing.location%>,<%=listing.country%>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
  </script>
</body>
